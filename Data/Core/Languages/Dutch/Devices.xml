	<entry name="ConvertNative" value="Xenomorfferomator"/>
	<entry name="ConvertNativeDescription" value="Met deze feromoonnabootsers die we ontwikkeld hebben, kunnen we de wilde dieren van de planeet temmen en ze zo verschrikkelijk doeltreffende waakhonden opvoeden."/>
	<entry name="ConvertNativeProperties" value="<icon texture='GUI/Bullet'/>Uitrusting<br/><icon texture='GUI/Bullet'/>Verandert buitenaardse wezens in bondgenoten<br/><icon texture='GUI/Bullet'/>+1 <icon texture='Resources/Conversions'/> overlooplimiet<br/><icon texture='GUI/Bullet'/>-50% <icon texture='Attributes/Power'/> sterkte"/>
	<entry name="Defense" value="Deadlockontwijkingsveld"/>
	<entry name="DefenseDescription" value="Deze uitrusting scant een begrensd bereik voortdurend af naar inkomende aanvallen. In geval van een bedreiging kan het meteen passende uitwijkmanouvres opstarten."/>
